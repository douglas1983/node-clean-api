{
  "name": "node-clean-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Douglas Morato <dmoratos@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "standart": "^6.1.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "yarn test:staged",
      "git add"
    ]
  },
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests --silent",
    "test:ci": "yarn test -- --coverage --silent",
    "test:coveralls": "yarn run test:ci && coveralls < coverage/lcov.info",
    "lintstaged": "yarn lint-staged"
  },
  "dependencies": {}
}
